{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "extends": ["airbnb"],
    "rules": {
        "semi": "off",
        "import/no-dynamic-require": "off",
        "global-require": "warn",
        "max-len": "warn",
        "indent": "warn",
        "consistent-return": "warn",
        "object-shorthand": "warn",
        "class-method-use-this": "warn",
        "class-methods-use-this": "warn"
    }
}
